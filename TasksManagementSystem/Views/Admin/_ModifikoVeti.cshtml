@model TasksManagementSystem.Models.VetiViewModel
@using (Html.BeginForm("ModifikoVeti", "Admin", FormMethod.Post, new { id = "form-referenti-vgi" }))
{<label>Zgjidhni nje entitet:</label>
    @Html.DropDownListFor(x=>Model.SelectedEntity,new SelectList(Model.SelectListEntity, "Value", "Text"), htmlAttributes: new { id = "EntitetID", @class = "form-control", required = "required" })

}
<script type="text/javascript">
    $("#EntitetID").on('change', function () {
        var value=$( "#EntitetID option:selected" ).text();
        //var getValue = $(this).text();
        $('#partialNestedTreeKategori').load('@Url.Action("NestedTreeForVeti","Admin")?table=' + value);
    });


</script>