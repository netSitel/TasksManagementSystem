@helper GetHtml(List<TasksManagementSystem.KlasatNdihmese.Kategori> kategoris, int parentID)
{ 
    <table id="table" class="table table-bordered">
        @{
            int currentID = 0;
            int rowIndex = 0;
            foreach (var i in kategoris.Where(a => a.parentId.Equals(parentID)))
            {
                if (i.id == currentID)
                {
                    continue;
                }
                else
                {
                    if (rowIndex == 0)
                    {
                        <thead>
                            <tr>
                                <td></td>
                                <th style="display:none;"> ID</th>
                                <th>Emer Kategorie</th>
                                <th style="display:none;">ParentId</th>
                            </tr>
                        </thead>
                    }
                    rowIndex++;
                    currentID = i.id;
                    var Sub = kategoris.Where(a => a.parentId.Equals(i.id)).ToList();
                    var newKategoriList = kategoris.Where(a => !a.id.Equals(i.id)).ToList();
                    <tbody>
                        <tr>
                            <td>
                                @if (Sub.Count > 0)
                                {
                                    <span class="icon icon-e" style="float:left; cursor:pointer;"></span>
                                }
                                else
                                {
                                    <span style="display:inline-block;width:14px">&nbsp;</span>
                                }


                            </td>
                            <td style="display:none;" class="id">@i.id</td>
                            <td class="popup" style="">@i.text</td>

                            <td style="display:none;">@i.parentId</td>
                        </tr>
                        <tr style="display:none;">
                            @if (Sub.Count > 0)
                            {
                                <td colspan="4" class="innerTable">
                                    @NestedTreeView.GetHtml(newKategoriList, i.id)
                                </td>
                            }
                            else
                            {
                                <td colspan="4"></td>
                            }
                        </tr>
                    </tbody>
                }
            }
        }
    </table>
    
}

